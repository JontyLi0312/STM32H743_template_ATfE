{
	"version": "2.0.0",
	"tasks":
	[
		{
			"label": "CMake: Configure Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--preset",
				"Debug",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "CMake: Configure Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--preset",
				"Release",
			],
			"group": {
				"kind": "build",
			}
		},
		{
			"label": "CMake: Build Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"--preset",
				"Debug",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "CMake: Build Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"--preset",
				"Release",
			],
			"group": {
				"kind": "build",
			}
		},
		{
			"label": "CMake: Clean Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build/Debug",
				"--target",
				"clean"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "CMake: Clean Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build/Release",
				"--target",
				"clean"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Flash Debug",
			"type": "shell",
			"command": "openocd",
			"args": [
				"-f",
				"interface/cmsis-dap.cfg",
				"-f",
				"target/stm32h7x.cfg",
				"-c",
				"program ./build/Debug/STM32H743IIT6.elf verify reset exit"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Flash Release",
			"type": "shell",
			"command": "openocd",
			"args": [
				"-f",
				"interface/cmsis-dap.cfg",
				"-f",
				"target/stm32h7x.cfg",
				"-c",
				"program ./build/Release/STM32H743IIT6.elf verify reset exit"
			],
			"group": {
				"kind": "build",
			}
		},
	]
}
